{
  "name": "@manuth/typescript-eslint-plugin",
  "version": "1.3.6",
  "description": "A plugin for TypeScript which provides eslint-reports to your IDE.",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "TypeScript",
    "ESLint",
    "language-service",
    "lint",
    "plugin",
    "TypeScript-plugin"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/manuth/TypeScriptESLintPlugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/TypeScriptESLintPlugin.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/TypeScriptESLintPlugin/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "npm run build -- --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-ide": "npm run lint || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "@manuth/interceptor": "^2.0.6",
    "@manuth/package-json-editor": "^1.4.7",
    "@thi.ng/cache": "^1.0.84",
    "@types/eslint": "^7.2.13",
    "lodash.clonedeep": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "upath": "^2.0.1",
    "vscode-languageserver": "^7.0.0"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^3.0.2",
    "@manuth/temp-files": "^2.0.5",
    "@manuth/tsconfig": "^2.0.1",
    "@manuth/typescript-languageservice-tester": "^2.0.1",
    "@types/fs-extra": "^9.0.11",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/lodash.pick": "^4.4.6",
    "@types/mocha": "^8.2.2",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^15.12.4",
    "@types/npm-which": "^3.0.0",
    "@types/pkg-up": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.29.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.3.2",
    "fs-extra": "^10.0.0",
    "mocha": "^9.0.1",
    "mock-require": "^3.0.3",
    "npm-which": "^3.0.1",
    "pkg-up": "^3.1.0",
    "random-js": "^2.1.0",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.3.4"
  },
  "peerDependencies": {
    "typescript": "*"
  }
}
